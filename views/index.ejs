    <!-- Jendela Percakapan -->
    <div class="chat-button" id="chatButton">
        <i class="material-icons">chat</i>
    </div>

    <div class="chat-window" id="chatWindow">
        <div class="chat-header">
            <img src="/images/images.jpeg" class="rounded-circle" alt="User 1" width="40" height="40">
            <span>yap</span>
            <button id="closeChat"><i class="material-icons">close</i></button>
        </div>

        <div class="chat-body">
            <div class="chat chat-left">
                <input type="text" value="Ok" readonly class="chat-input chat-input-left">
                <small>12:11</small>
                <div class="dropdown">
                    <button class="dropbtn">...</button>
                    <div class="dropdown-content">
                        <a href="#"><i class="material-icons">edit</i></a>
                        <a href="#"><i class="material-icons">delete</i></a>
                    </div>
                </div>
            </div>
            <div class="chat chat-right">
                <input type="text" value="Ok" readonly class="chat-input chat-input-right">
                <small>12:11</small>
                <div class="dropdown dropdown-right">
                    <button class="dropbtn">...</button>
                    <div class="dropdown-content">
                        <a href="#"><i class="material-icons">edit</i></a>
                        <a href="#"><i class="material-icons">delete</i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="chat-footer">
            <input type="text" id="chatInput" placeholder="Tulis pesan...">
            <button id="sendButton"><i class="material-icons">send</i></button>
        </div>
    </div>


    <script>
        document.getElementById('chatButton').addEventListener('click', function() {
            document.getElementById('chatWindow').style.display = 'flex';
        });
        
        document.getElementById('closeChat').addEventListener('click', function() {
            document.getElementById('chatWindow').style.display = 'none';
        });
        
    </script>


