<%- include('../partial/head_login.ejs', {title : 'Login'}) %>

      <div class="login-box">
        <h2>Login</h2>
        <form action="/login" method="post">
          <div class="mb-3">
            <input type="text" class="form-control" id="identifier" name="identifier" placeholder="Email Address or Username">
          </div>
          <div class="mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-primary login-btn d-block w-100">Login</button>
        </form>
        <p class="text-center mt-3">or</p>
        <a href="/auth/google" class="btn btn-danger google-btn d-block w-100">Login with Google</a>
        <hr>
        <p class="text-center">Don't have an account? <a href="/login/signup" class="signup-link">Sign Up</a></p>
      </div>
    </div>

<%- include('../partial/_linkScript.ejs') %>

      <script>
        $(document).ready(function () {
          toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
          };
        });
      </script>
    <% if(err){ %>
      <script>
        toastr.error('<%= err %>');
      </script>
      <%} %>
